{
    "name": "php-kitchen/yii2-domain",
    "description": "Implementation of DDD key concepts for Yii2.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "DDD",
        "Domain Driven Design",
        "Entity",
        "Repository",
        "Strategy",
        "Finder",
        "Specification",
        "Yii2",
        "Clean code"
    ],
    "authors": [
        {
            "name": "Dmitry Kolodko",
            "email": "prowwid@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/Djaconda/code-specs.git"
        }
    ],
    "require": {
        "php": ">=8.1",
        "yidas/yii2-bower-asset": "2.0.13.1",
        "yiisoft/yii2": "^2.0",
        "php-kitchen/yii2-di": "^0.2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "php-kitchen/code-specs": "^4.0.2",
        "rector/rector": "^0.11",
        "php-coveralls/php-coveralls": "^2.5"
    },
    "suggest": {
        "yii2tech/ar-softdelete": "Needed to support 'Recoverable' functionality."
    },
    "autoload": {
        "psr-4": {
            "PHPKitchen\\Domain\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PHPKitchen\\Domain\\Specs\\": "specs"
        }
    }
}
